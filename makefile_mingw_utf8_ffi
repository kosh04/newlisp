# makefile for newLISP v. 10.x.x on MinGW with UTF-8 support and FFI
#

OBJS = newlisp.o nl-symbol.o nl-math.o nl-list.o nl-liststr.o nl-string.o nl-filesys.o \
	nl-sock.o nl-import.o nl-xml-json.o nl-web.o nl-matrix.o nl-debug.o pcre.o \
	nl-utf8.o win-util.o win-path.o windows/icon.o

CFLAGS = -Wall -O1 -DSUPPORT_UTF8 -DWINDOWS -DFFI
LDLIBS = -lws2_32 -lffi

CC = gcc
WINDRES = windres
STRIP = strip

default: newlisp.exe

newlisp.exe: $(OBJS) 
	$(CC) $^ $(LDFLAGS) $(LDLIBS) -o $@
	$(STRIP) $@

.c.o:
	$(CC) $(CFLAGS) -c $<

%.o: %.rc
	$(WINDRES) $< -O coff -o $@

$(OBJS): primes.h protos.h newlisp.h makefile_mingw_utf8_ffi
windows/icon.o: version.h
