# makefile for newLISP  DLL v. 10.x.x on MinGW DLL with FFI and UTF8 support
#

OBJS = newlisp.o nl-symbol.o nl-math.o nl-list.o nl-liststr.o nl-string.o nl-filesys.o \
	nl-sock.o nl-import.o nl-xml-json.o nl-web.o nl-matrix.o nl-debug.o pcre.o \
	nl-utf8.o win-util.o win-path.o win-dll.o windows/icon.o

CFLAGS = -m32 -Wall -c -O1 -DLIBRARY -DSUPPORT_UTF8 -DFFI -DWINDOWS=1 -D_WIN32_WINNT=0x0600

CC = gcc
STRIP = strip
WRAP = dllwrap

default: $(OBJS)
	$(WRAP) -m32 *.o -Wl,--enable-stdcall-fixup --def win-dll.def -lffi -lws2_32 \
	-o newlisp.dll 
	$(STRIP) newlisp.dll

.c.o:
	$(CC) $(CFLAGS) $<

%.o: %.rc
	$(WINDRES) $< -O coff -o $@

$(OBJS): primes.h protos.h makefile_mingwdll_utf8_ffi
